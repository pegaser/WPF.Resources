<Window x:Class="WPF.ResourcesExample.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.ResourcesExample"
        mc:Ignorable="d" Title="SecondWindow" Height="450" Width="800">
    <StackPanel>
        <Button Background="{StaticResource TileBrush}" FontSize="14" Height="30" Width="300">A Tiled Button</Button>
        <Label Foreground="{x:Static SystemColors.WindowTextBrush}">
            Cualquier texto
        </Label>
        <Label Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
            Otro texto
        </Label>
    </StackPanel>
</Window>
